@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    /* Center the container in the middle of the page */
    body, html {
        height: 100%;
        margin: 0;
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
    }
</style>

<div class="container">
    <div class=" justify-content-center align-items-center d-flex">
        <div class="widget p-5 "style="width:600px">
            <h1>@ViewData["Title"]</h1>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <ejs-textbox id="email" placeholder="Email" ejs-for="Input.Email" floatLabelType="Always"></ejs-textbox>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <ejs-textbox id="password" placeholder="Password" type="password" autocomplete="current-password" ejs-for="Input.Password" floatLabelType="Always"></ejs-textbox>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <ejs-checkbox id="default" ejs-for="Input.RememberMe" label="@Html.DisplayNameFor(m => m.Input.RememberMe)" checked="true"></ejs-checkbox>
                        
                    </label>
                </div>
                <div>
                    @* <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button> *@
                    <ejs-button id="login-submit" cssClass="e-success" type="submit" class="w-100 btn btn-lg" content="Log in"></ejs-button>
                </div>
                <div class="d-flex justify-content-between">
                   
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
                  
                </div>
            </form>
    
    </div>
